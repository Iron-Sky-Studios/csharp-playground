{
   "tasks": [
      {
         "name": "Run csharpier",
         "command": "dotnet-csharpier",
         "args": [ "${staged}" ],
         "include": [ "**/*.cs" ]
      },
      {
         "name": "commit-message-linter",
         "command": "dotnet",
         "args": ["husky", "exec", ".husky/csx/commit-lint.csx", "--args", "${args}"]
      }
   ]
}
